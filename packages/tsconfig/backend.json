{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "backend",
  "extends": "./base.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
