{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/backend.json",
  "display": "backend",
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "moduleResolution": "Node",
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "types",
      "node_modules/@types",
      "node_modules/types"
    ]
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "prisma/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/dist/**/*",
    "public/**/*"
  ]
}
