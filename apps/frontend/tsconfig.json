{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/frontend.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
